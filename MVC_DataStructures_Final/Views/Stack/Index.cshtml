
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Stack</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
    <div>
        <div class="w3-bar w3-black">
            <a href="@Url.Action("Index", "Stack")" class="w3-bar-item w3-button">Stack</a>
            <a href="@Url.Action("Index", "Queue")" class="w3-bar-item w3-button">Queue</a>
            <a href="@Url.Action("Index", "Dictionary")" class="w3-bar-item w3-button">Dictionary</a>
            <a href="@Url.Action("Exit", "Home")" class="w3-bar-item w3-button">Exit</a>
        </div>
    </div>
    <div class="container">
        <div class="jumbotron">
            <h2>My Stack</h2>
            <p>
                Manipulate my stack below by pushing the buttons.
                The stack will then be displayed below
            </p>
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-6">

            <a href="@Url.Action("AddOne", "Stack")" class="w3-bar-item w3-button">Add One</a>
            <a href="@Url.Action("AddHuge", "Stack")" class="w3-bar-item w3-button">Add Huge List</a>
            <a href="@Url.Action("Display", "Stack")" class="w3-bar-item w3-button">Display Stack</a>
            <a href="@Url.Action("Delete", "Stack")" class="w3-bar-item w3-button">Delete from Stack</a>
            <a href="@Url.Action("Clear", "Stack")" class="w3-bar-item w3-button">Clear Stack</a>
            <a href="@Url.Action("Search", "Stack")" class="w3-bar-item w3-button">Search Stack</a>
            <a href="@Url.Action("ReturnHome", "Stack")" class="w3-bar-item w3-button">Return to Main Menu</a>

        </div>
        <div class="col-md-2"></div>
    </div>
    <div class="container">
        <div class="col col-md-6">
            @if (ViewBag.Mystack == null)
            {

            }
            else
            {
                foreach (var sData in ViewBag.MyStack)
                {
                    <p>@sData</p>
                }
            }
        </div>

        <div class="col-md-6">
            <p>@ViewBag.Clear</p>
            <p>@ViewBag.Search</p>
            <p>@ViewBag.Time</p>
        </div>
    </div>
</body>
</html>